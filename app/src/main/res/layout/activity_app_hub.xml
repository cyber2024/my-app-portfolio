<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AppHub">


    android:layout_centerHorizontal="true"
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Application Hub"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <Button style="@style/OrangeButton"

            android:layout_height="wrap_content"
            android:text="Popular Movies"
            android:id="@+id/btnspotifystreamer"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/orange_button"
            android:onClick="onClick"/>

        <Button style="@style/OrangeButton"

            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Scores App"
            android:id="@+id/btnscores"
            android:layout_below="@id/btnspotifystreamer"
            android:background="@drawable/orange_button"
            android:onClick="onClick"/>

        <Button style="@style/OrangeButton"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Library App"
            android:id="@+id/btnlibrary"
            android:layout_below="@id/btnscores"
            android:background="@drawable/orange_button"
            android:onClick="onClick" />

        <Button style="@style/OrangeButton"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Build It BIGGER"
            android:id="@+id/btnbigger"
            android:layout_below="@id/btnlibrary"
            android:background="@drawable/orange_button"
            android:onClick="onClick" />

        <Button style="@style/OrangeButton"

            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="xyz Reader"
            android:id="@+id/btnreader"
            android:layout_below="@id/btnbigger"
            android:background="@drawable/orange_button"
            android:onClick="onClick" />

        <Button style="@style/OrangeButton.RedButton"

            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="CAPSTONE: My Own App"
            android:id="@+id/btnmyownapp"
            android:layout_below="@id/btnreader"
            android:background="@drawable/red_button"
            android:onClick="onClick" />
    </RelativeLayout>
</RelativeLayout>
